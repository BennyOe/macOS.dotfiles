{
  "title": "Launch Brave",
  "rules": [
    {
      "description": "option +c opens Brave",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "c",
            "modifiers": {
              "mandatory": [
                "left_option"
              ],
              "optional": []
            }
          },
          "to": [
            {
              "shell_command": "open '/Applications/Brave Browser.app'"
            }
          ]
        }
      ]
    }
  ]
}
